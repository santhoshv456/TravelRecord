<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecord.MainPage"> 

    <!--<ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="bluecolor">#FF5A60</Color>
        </ResourceDictionary>
    </ContentPage.Resources>-->

    <StackLayout VerticalOptions="Center" Margin="20">
        <Entry x:Name="txtUserName" Placeholder="Email Address" Keyboard="Email"/>
        <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="btnLogin" Text="Log In" 
                Margin="0,50,0,0"
                Clicked="btnLogin_Clicked" 
                Style="{StaticResource normalButton}" />
    </StackLayout>

</ContentPage>
